{
  "name": "edge-telemetry-sdk",
  "version": "2.0.0",
  "description": "A lightweight React Native SDK for collecting mobile app telemetry and exporting it to custom backends in JSON format. Built for flexible and developer-friendly observability.",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "src",
    "README.md",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "typecheck": "tsc",
    "build": "bob build",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "telemetry",
    "monitoring",
    "sdk",
    "observability",
    "analytics",
    "crash-reporting",
    "performance",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NCG-Africa/edge_telemetry_react_native.git"
  },
  "author": "mktowett <marvintowett@gmail.com> (https://github.com/NCG-Africa/edge_telemetry_react_native)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NCG-Africa/edge_telemetry_react_native/issues"
  },
  "homepage": "https://github.com/NCG-Africa/edge_telemetry_react_native#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-builder-bob": "^0.40.8",
    "release-it": "^17.10.0"
  },

  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },

  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.52.0"
  },
  "dependencies": {
    "@embrace-io/react-native": "^6.2.0"
  }
}
